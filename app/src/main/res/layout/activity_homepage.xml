<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sv.calorieintakeapps.feature_homepage.presentation.HomepageActivity">

    <FrameLayout
        android:id="@+id/flayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/ic_btn_scan_92" />

    <com.akshay.library.CurveBottomBar
        android:id="@+id/navbar_homepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="24dp"
        android:paddingVertical="8dp"
        app:curveRadius="40dp"
        app:elevation="8dp"
        app:itemIconTint="@drawable/navbar_item_colors"
        app:itemTextColor="@drawable/navbar_item_colors" />

</RelativeLayout>